# the upstream component nginx needs to connect to
upstream django {
    server unix:/var/tmp/oipa.sock; # for a file socket
}

server {
    listen      80;
    server_name dev.oipa.nl; # substitute FQDN
    charset     utf-8;

    # max upload size
    client_max_body_size 75M;

    location /media  {
        alias /home/oipa/OIPA/OIPA/media;  # amend as required
    }

    location /static {
        alias /home/oipa/OIPA/OIPA/static-root; # amend as required
    }

    # Send all non-media requests to the Django server.
    location / {
        uwsgi_pass  django;
        include     /etc/nginx/uwsgi_params; # the installed uwsgi_params file
        uwsgi_read_timeout 1500;
    }
}
